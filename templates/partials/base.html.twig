{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://assets/images/logo.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />
{% endblock head %}

{% block stylesheets %}
    {% do assets.addCss('theme://dist/main.css') %}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('theme://dist/main.js', {group:'bottom'}) %}
{% endblock %}

{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
</head>
<body id="top" class="{{ page.header.body_classes }}">
{% include 'partials/icons.html.twig' %}
{% block header %}
    <header>
        <nav class="flex">
                <a href="#" class="brand">
                    <svg class="icon icon-newton-logo-mini"><use xlink:href="#icon-newton-logo-mini"></use></svg>
                </a>
                <input id="bmenub" type="checkbox" class="show">
                <label for="bmenu" class="burger toggle pseudo button">menu</label>
                {% block header_navigation %}
                    {% include 'partials/navigation.html.twig' %}
                {% endblock %}

        </nav>
    </header>
{% endblock %}

{% block body %}
    <section id="body">
        <div class="wrapper padding">
                <div class="uk-container">
                        <div class="uk-card uk-card-body uk-card-primary">
                            <h3 class="uk-card-title">Example headline</h3>
            
                            <button class="uk-button uk-button-default" uk-tooltip="title: Hello World">Hover</button>
                        </div>
                    </div>
        {% block content %}{% endblock %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <div class="footer text-center">
        <div class="wrapper padding">
            <p><a href="https://github.com/macjendr/newton">Grav Newton Theme</p>
        </div>
    </div>
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock %}

</body>
</html>
